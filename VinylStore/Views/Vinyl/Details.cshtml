@model VinylStore.ViewModels.VinylViewModel

@{
    ViewData["Title"] = "Details";
}
<div class="text-white">
    <h1>Details</h1>

    <div>        
        <hr/>
        <dl>
            <dt class="col-sm-2">
                Cover:
            </dt>
            <dd class="col-sm-10">
                <img src="@Html.DisplayFor(model => model.ImageUrl)" alt="Alternate Text" height="250" width="250" />
            </dd>
            <dt class="col-sm-2">
                Album:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AlbumName)
            </dd>
            <dt class="col-sm-2">
                Artist:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ArtistName)
            </dd>
            <dt class="col-sm-2">
                Genre:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Genres)
            </dd>
            <dt class="col-sm-2">
                Tracklist:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TrackList)
            </dd>
            <dt class="col-sm-2">
                Release date:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReleaseYear)
            </dd>
            <dt class="col-sm-2">
                Price(€):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                Description:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("Edit", "Edit", new { vinylId = Model.Id })
        <a asp-action="Index">Back to List</a>
    </div>
</div>


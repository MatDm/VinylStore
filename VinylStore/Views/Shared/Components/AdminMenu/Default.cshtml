@model IEnumerable<VinylStore.Component.AdminMenuItem>

<li class="nav-item dropdown">
    <a asp-controller="Admin"
       asp-action="Index"
       class="nav-link dropdown-toggle" data-toggle="dropdown">Admin<b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
        @foreach (var menuItem in Model)
        {
            <li>
                <a asp-controller="Admin" asp-action=@menuItem.ActionValue>
                    @menuItem.DisplayValue
                </a>
            </li>
        }
    </ul>
</li>


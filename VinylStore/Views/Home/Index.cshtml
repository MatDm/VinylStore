@model VinylStore.ViewModels.VinylForSaleViewModel[]

<h2 class="text-white text-center">Recently added by users</h2>

<div id="carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" style="overflow: visible;">
        <div class="carousel-item active">
            <img class="d-block w-25 img-fluid carouselPerso" src="@Model[0].Vinyl.ImageUrl" alt="Image not available">
            <div class="carousel-caption d-none d-sm-block" style="position:absolute; top:350px;">
                <h4>@Model[0].User.UserName</h4>
                <p>added</p>
                <h5>@Model[0].Vinyl.AlbumName - @Model[0].Vinyl.ArtistName</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-25 img-fluid carouselPerso" src="@Model[1].Vinyl.ImageUrl" alt="Image not available">
            <div class="carousel-caption d-none d-sm-block" style="position:absolute; top:350px;">
                <h4>@Model[1].User.UserName</h4>
                <p>added</p>
                <h5>@Model[1].Vinyl.AlbumName - @Model[1].Vinyl.ArtistName</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-25 img-fluid carouselPerso" src="@Model[2].Vinyl.ImageUrl" alt="Image not available">
            <div class="carousel-caption d-none d-sm-block" style="position:absolute; top:350px;">
                <h4>@Model[2].User.UserName</h4>
                <p>added</p>
                <h5>@Model[2].Vinyl.AlbumName - @Model[2].Vinyl.ArtistName</h5>
            </div>
        </div>

    </div>
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<script src="~/js/site.js"></script>

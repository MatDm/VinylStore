@model VinylStore.ViewModels.VinylForSaleViewModel[]

@{ 
    string activeImageClass = "";
}

<h2 class="text-white text-center">Recently added by users</h2>

<div id="carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" style="overflow: visible;">


        @for (int i = 0; i < Model.Length; i++)
        {
            if (i == 0)
            {
                activeImageClass = "active";
            }
            else
            {
                activeImageClass = string.Empty;
            }
            <div class="carousel-item @activeImageClass">
                <img class="d-block w-25 img-fluid carouselPerso" src="@Model[i].Vinyl.ImageUrl" alt="Image not available">
                <div class="carousel-caption d-none d-sm-block" style="position:absolute; top:350px;">
                    <h4>@Model[i].User.UserName</h4>
                    <p>added</p>
                    <h5>@Model[i].Vinyl.AlbumName - @Model[i].Vinyl.ArtistName</h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<script src="~/js/site.js"></script>

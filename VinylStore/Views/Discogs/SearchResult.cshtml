@model SearchVinyl

@{
    ViewData["Title"] = "Search Result";
}

<h1>Search result</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.results)
        {
            if (item.format != null)
            {
                if (item.format.Contains("Vinyl"))
                {
                    <tr>
                        <td><img src="@item.cover_image" alt="Alternate Text" height="150" width="150" /></td>
                        <td> @item.title</td>
                        <td>
                            <div>
                                @Html.ActionLink("Add to Collection", "AddToUserCollection", "Collection", 
                               new { albumName = item.title, genre = item.genre, imageUrl = item.cover_image, releaseYear = item.year, format = item.format })
                            </div>
                            <div>
                                @Html.ActionLink("Add to Wantlist", "AddToUserWantlist", "Wantlist", 
                               new { albumName = item.title, genre = item.genre, imageUrl = item.cover_image, releaseYear = item.year, format = item.format })
                            </div>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>

@model VinylStore.Common.MTO.AlbumSearchResultJsonMTO

@{
    ViewData["Title"] = "Search Result";
}
<div class="text-white">
    <h1>Search result</h1>
    <table class="table table-striped text-white">
        @for (int i = 0; i < Model.albums.items.Length; i++)
        {
            <tr>
                <td>
                    <img src="@Model.albums.items[i].images[0].url" alt="Image not available" height="150" width="150" />
                </td>
                <td>
                    @Model.albums.items[i].name
                </td>
                <td>
                    <div>
                        @Html.ActionLink("Add to Collection", "AddToUserCollection", "Collection", new { spotifyAlbumId = @Model.albums.items[i].id })
                    </div>
                    <div>
                        @Html.ActionLink("Add to Wantlist", "AddToUserWantlist", "Wantlist", new { spotifyAlbumId = @Model.albums.items[i].id })
                    </div>
                </td>
            </tr>
        }
    </table>
</div>

